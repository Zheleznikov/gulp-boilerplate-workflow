{
  "build": {
    "server": "./build",
    "html": "./build/",
    "js": "./build/assets/js/",
    "css": "./build/assets/css/",
    "fonts": "./build/assets/fonts/",
    "images": "./build/images/",
    "favicon": "./build/favicons/",
    "htaccess": "./build/",
    "robots": "./build/",
    "forms": "./build/forms/",
    "sitemap": "./build/",
    "extra": "./build/"
  },
  "src": {
    "html": "./src/*.html",
    "js": "./src/js/main.js",
    "css": "./src/scss/main.scss",
    "images": {
      "original": "./src/images/original/**/*.*",
      "optimized": "./src/images/optimized/**/*.*"
    },
    "fonts": "./src/fonts/**/*.ttf",
    "favicon": "./src/favicon/favicon.png",
    "htaccess": "./src/.htaccess",
    "robots": "./src/robots.txt",
    "phpmailer": "./composer_modules/phpmailer/**/*.*",
    "forms": "./src/forms/*.php",
    "extra": "./src/extra/**/*.*",
    "cache": {
      "path": "./src/",
      "file": "./src/cache.json"
    }
  },
  "watch": {
    "server": "./build/**/*.*",
    "html": "./src/**/*.html",
    "js": "./src/js/**/*.js",
    "css": "./src/scss/**/*.scss",
    "images": {
      "original": "./src/images/original/**/*.*",
      "optimized": "./src/images/optimized/**/*.*"
    },
    "fonts": "./src/fonts/*.ttf",
    "favicon": "./src/favicon/favicon.*",
    "htaccess": "./src/.htaccess",
    "robots": "./src/robots.txt",
    "forms": "./src/forms/**/*.php",
    "extra": "./src/extra/**/*.*"
  },
  "lint": {
    "configs": "./src/lint/",
    "html": "./src/**/*.html",
    "js": "./src/js/**/_*.js",
    "scss": "./src/scss/**/*.scss"
  },
  "clean": "./build"
}
